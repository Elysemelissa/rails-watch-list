<h1>All Movie Lists</h1>
<br>
<div>
<%@lists.each do |item| %>
<ul>
<div class="container">
  <div class="row">
<li><div class="card-category col-sm" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), 
  url('<%= cl_image_path item.photo.key, crop: :fill %>')">
  <%= link_to item.name, "lists/#{item.id}" %>
</div></li>
</ul>
</div>
<% end %>
</div>
</div>

<%=link_to "Create new List", "/lists/new" %>
